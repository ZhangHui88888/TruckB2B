---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/products', label: 'Products' },
  { href: '/brands', label: 'Brands' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About Us' },
  { href: '/contact', label: 'Contact' },
];

const brands = [
  'VOLVO', 'SCANIA', 'MERCEDES-BENZ', 'MAN', 'IVECO', 'RENAULT', 'DAF', 'FORD'
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-40">
  <!-- Top bar -->
  <div class="bg-primary text-white text-sm py-2">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <div class="flex items-center gap-4">
        <a href="mailto:harry.zhang592802@gmail.com" class="flex items-center gap-1 hover:text-gray-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <span class="hidden sm:inline">harry.zhang592802@gmail.com</span>
        </a>
        <a href="https://wa.me/8613062870118" class="flex items-center gap-1 hover:text-gray-200">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span class="hidden sm:inline">+86 130-6287-0118</span>
        </a>
      </div>
      <div class="text-xs">
        <span>OEM Quality | Global Shipping | Factory Direct</span>
      </div>
    </div>
  </div>
  
  <!-- Main navigation -->
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <!-- 简化的Logo图标 -->
        <div class="relative w-12 h-12 bg-gradient-to-br from-red-800 to-red-900 rounded-lg flex items-center justify-center shadow-md">
          <!-- 车灯光束效果 -->
          <div class="absolute -left-2 top-1/2 -translate-y-1/2 w-3 h-1 bg-gradient-to-l from-yellow-300 to-transparent opacity-70"></div>
          <div class="absolute -right-2 top-1/2 -translate-y-1/2 w-3 h-1 bg-gradient-to-r from-yellow-300 to-transparent opacity-70"></div>
          <!-- XK文字 -->
          <span class="text-2xl font-black text-yellow-300 tracking-tight">XK</span>
        </div>
        <div>
          <span class="font-bold text-xl text-gray-900">TRUCK</span>
          <span class="block text-xs text-gray-500">Heavy Truck Lights</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class={`font-medium transition-colors ${
              currentPath === link.href 
                ? 'text-primary' 
                : 'text-gray-700 hover:text-primary'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>
      
      <!-- CTA Button -->
      <div class="hidden md:block">
        <a 
          href="/contact" 
          class="bg-secondary hover:bg-orange-600 text-white px-6 py-2 rounded-lg font-medium transition-colors"
        >
          Get Quote
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-700"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    
    <!-- Brands bar -->
    <div class="hidden lg:flex items-center gap-6 py-2 border-t text-sm text-gray-600 overflow-x-auto">
      <span class="font-medium text-gray-900 whitespace-nowrap">Brands:</span>
      {brands.map(brand => (
        <a 
          href={`/brands/${brand.toLowerCase().replace(/\s+/g, '-')}`}
          class="hover:text-primary whitespace-nowrap transition-colors"
        >
          {brand}
        </a>
      ))}
    </div>
  </nav>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
    <div class="container mx-auto px-4 py-4 space-y-4">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class={`block font-medium ${
            currentPath === link.href 
              ? 'text-primary' 
              : 'text-gray-700'
          }`}
        >
          {link.label}
        </a>
      ))}
      <div class="pt-4 border-t">
        <span class="text-sm font-medium text-gray-900">Brands:</span>
        <div class="flex flex-wrap gap-2 mt-2">
          {brands.map(brand => (
            <a 
              href={`/brands/${brand.toLowerCase().replace(/\s+/g, '-')}`}
              class="text-sm text-gray-600 hover:text-primary"
            >
              {brand}
            </a>
          ))}
        </div>
      </div>
      <a 
        href="/contact" 
        class="block text-center bg-secondary hover:bg-orange-600 text-white px-6 py-2 rounded-lg font-medium"
      >
        Get Quote
      </a>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
