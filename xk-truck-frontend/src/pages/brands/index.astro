---
import Layout from '../../layouts/Layout.astro';

const brands = [
  {
    name: 'VOLVO',
    slug: 'volvo',
    description: 'Premium truck lights for VOLVO FH, FM, FMX series',
    logo: '/images/brands/volvo.svg',
    productCount: '200+'
  },
  {
    name: 'SCANIA',
    slug: 'scania',
    description: 'Quality parts for SCANIA R, S, P, G series trucks',
    logo: '/images/brands/scania.svg',
    productCount: '180+'
  },
  {
    name: 'MERCEDES-BENZ',
    slug: 'mercedes-benz',
    description: 'Aftermarket parts for Actros, Arocs, Atego',
    logo: '/images/brands/mercedes.svg',
    productCount: '150+'
  },
  {
    name: 'MAN',
    slug: 'man',
    description: 'Truck lights for MAN TGX, TGS, TGL series',
    logo: '/images/brands/man.svg',
    productCount: '120+'
  },
  {
    name: 'IVECO',
    slug: 'iveco',
    description: 'Parts for IVECO Stralis, S-Way, Eurocargo',
    logo: '/images/brands/iveco.svg',
    productCount: '100+'
  },
  {
    name: 'RENAULT',
    slug: 'renault',
    description: 'Quality parts for RENAULT T, C, K series',
    logo: '/images/brands/renault.svg',
    productCount: '90+'
  },
  {
    name: 'DAF',
    slug: 'daf',
    description: 'Aftermarket parts for DAF XF, CF, LF series',
    logo: '/images/brands/daf.svg',
    productCount: '110+'
  },
  {
    name: 'FORD',
    slug: 'ford',
    description: 'Truck lights for FORD Cargo series',
    logo: '/images/brands/ford.svg',
    productCount: '60+'
  }
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://xk-truck.cn"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Brands",
      "item": "https://xk-truck.cn/brands"
    }
  ]
};
---

<Layout 
  title="Truck Brands We Supply"
  description="Browse truck parts by brand - VOLVO, SCANIA, MERCEDES-BENZ, MAN, IVECO, RENAULT, DAF, FORD. OEM quality headlamps, tail lamps, fog lamps, mirrors. Factory direct pricing."
  canonical="https://xk-truck.cn/brands"
  schema={breadcrumbSchema}
>
  <!-- Breadcrumb -->
  <nav class="bg-gray-100 py-3">
    <div class="container mx-auto px-4">
      <ol class="flex items-center gap-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-primary">Home</a></li>
        <li>/</li>
        <li class="text-gray-900 font-medium">Brands</li>
      </ol>
    </div>
  </nav>

  <!-- Header -->
  <section class="bg-gradient-to-r from-primary to-primary-dark text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        European Truck Brands We Supply
      </h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        Premium aftermarket truck lights and body parts for all major European truck brands. 
        OEM quality, factory direct pricing, global shipping.
      </p>
    </div>
  </section>

  <!-- Brands Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {brands.map(brand => (
          <a 
            href={`/brands/${brand.slug}`}
            class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all p-6 group border-2 border-transparent hover:border-primary"
          >
            <div class="aspect-video bg-gray-50 rounded-lg mb-4 flex items-center justify-center">
              <span class="text-4xl font-bold text-gray-300 group-hover:text-primary transition-colors">
                {brand.name}
              </span>
            </div>
            <h2 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
              {brand.name}
            </h2>
            <p class="text-gray-600 text-sm mb-3">
              {brand.description}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">{brand.productCount} parts</span>
              <span class="text-primary font-medium text-sm group-hover:translate-x-1 transition-transform">
                View Parts â†’
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        Why Choose XKTRUCK for Your Brand Parts?
      </h2>
      <div class="grid md:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">OEM Quality</h3>
          <p class="text-sm text-gray-600">All parts meet original equipment specifications</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Factory Direct</h3>
          <p class="text-sm text-gray-600">Competitive wholesale pricing from manufacturer</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Large Stock</h3>
          <p class="text-sm text-gray-600">1000+ parts ready for immediate shipping</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Global Shipping</h3>
          <p class="text-sm text-gray-600">Worldwide delivery with tracking</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
