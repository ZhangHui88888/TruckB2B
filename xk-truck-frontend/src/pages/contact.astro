                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">WhatsApp</div>
                <div class="text-green-600">+86 130-6287-0118</div>
                <div class="text-sm text-gray-500 mt-1">Click to chat instantly</div>
              </div>
            </a>

            <!-- Email -->
            <a 
              href="mailto:harry.zhang592802@gmail.com"
              class="flex items-start gap-4 p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors"
            >
              <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Email</div>
                <div class="text-primary">harry.zhang592802@gmail.com</div>
                <div class="text-sm text-gray-500 mt-1">We reply within 24 hours</div>
              </div>
            </a>

            <!-- Location -->
            <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-lg">
              <div class="w-10 h-10 bg-gray-400 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Location</div>
                <div class="text-gray-600">China</div>
                <div class="text-sm text-gray-500 mt-1">35,000㎡ Manufacturing Facility</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Business Hours -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="font-semibold text-gray-900 mb-4">Business Hours</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Monday - Friday</span>
              <span class="text-gray-900">9:00 AM - 6:00 PM (CST)</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Saturday</span>
              <span class="text-gray-900">9:00 AM - 12:00 PM (CST)</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Sunday</span>
              <span class="text-gray-500">Closed</span>
            </div>
          </div>
          <p class="text-xs text-gray-500 mt-4">
            * WhatsApp messages are monitored outside business hours
          </p>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm p-6 md:p-8">
          <h2 class="text-xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
          
          <form id="contact-form" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Your Name *
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  placeholder="John Smith"
                />
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                  Company Name
                </label>
                <input 
                  type="text" 
                  id="company" 
                  name="company"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  placeholder="Your Company"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  placeholder="john@example.com"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone / WhatsApp
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  placeholder="+1 234 567 8900"
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                Subject *
              </label>
              <select 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
              >
                <option value="">Select a subject</option>
                <option value="quote">Request a Quote</option>
                <option value="product">Product Inquiry</option>
                <option value="wholesale">Wholesale Partnership</option>
                <option value="support">Technical Support</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary resize-none"
                placeholder="Please describe your requirements, including product names, OE numbers, quantities, etc."
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input 
                type="checkbox" 
                id="privacy" 
                name="privacy" 
                required
                class="mt-1 w-4 h-4 text-primary rounded border-gray-300 focus:ring-primary"
              />
              <label for="privacy" class="text-sm text-gray-600">
                I agree to the processing of my personal data for the purpose of handling my inquiry. *
              </label>
            </div>

            <button 
              type="submit"
              class="w-full bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
            >
              Send Message
            </button>
          </form>

          <p class="text-sm text-gray-500 mt-6 text-center">
            Prefer instant messaging? 
            <a 
              href="https://wa.me/8613062870118?text=Hi, I'm interested in your truck parts"
              target="_blank"
              rel="noopener noreferrer"
              class="text-green-600 hover:underline font-medium"
            >
              Chat on WhatsApp
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-4">
        <div class="bg-white rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 mb-2">What is your minimum order quantity (MOQ)?</h3>
          <p class="text-gray-600">Our MOQ varies by product. For most items, we can accommodate small trial orders. Contact us for specific product requirements.</p>
        </div>
        <div class="bg-white rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 mb-2">Do you offer samples?</h3>
          <p class="text-gray-600">Yes, we provide samples for quality evaluation. Sample costs and shipping are typically charged but can be credited against future orders.</p>
        </div>
        <div class="bg-white rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 mb-2">What payment methods do you accept?</h3>
          <p class="text-gray-600">We accept T/T (bank transfer), PayPal, and Western Union. For large orders, we can discuss flexible payment terms.</p>
        </div>
        <div class="bg-white rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 mb-2">How long is the delivery time?</h3>
          <p class="text-gray-600">Standard delivery is 15-30 days depending on order size and destination. Express shipping options are available for urgent orders.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'https://xk-truck-api.harry-zhang592802.workers.dev';
  
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // 获取表单数据
    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      company: formData.get('company'),
      phone: formData.get('phone'),
      subject: formData.get('subject'),
      message: formData.get('message'),
      source: 'contact_form'
    };
    
    // 禁用按钮，显示加载状态
    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    
    try {
      const response = await fetch(`${API_URL}/api/inquiry`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        // 成功提示
        showNotification('success', result.message || 'Thank you for your inquiry! We will get back to you within 24 hours.');
        form.reset();
      } else {
        // 错误提示
        showNotification('error', result.error || 'Failed to send message. Please try again.');
      }
    } catch (error) {
      console.error('Submit error:', error);
      showNotification('error', 'Network error. Please try again or contact us via WhatsApp.');
    } finally {
      // 恢复按钮
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
  
  // 显示通知
  function showNotification(type: 'success' | 'error', message: string) {
    // 移除已有通知
    document.querySelectorAll('.form-notification').forEach(el => el.remove());
    
    const notification = document.createElement('div');
    notification.className = `form-notification fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg max-w-md ${
      type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
      <div class="flex items-center gap-3">
        <span class="text-xl">${type === 'success' ? '✓' : '✕'}</span>
        <p>${message}</p>
      </div>
    `;
    document.body.appendChild(notification);
    
    // 5秒后自动消失
    setTimeout(() => {
      notification.remove();
    }, 5000);
  }
</script>
