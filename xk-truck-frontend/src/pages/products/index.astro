    image: '/images/products/placeholder.jpg',
    description: 'Complete mirror assembly for SCANIA R series'
  },
  {
    id: '3',
    name: 'MERCEDES-BENZ Actros Grille',
    brand: 'MERCEDES-BENZ',
    category: 'Grilles',
    oeNumber: '9437500918',
    image: '/images/products/placeholder.jpg',
    description: 'Front grille for Mercedes-Benz Actros MP4'
  },
  {
    id: '4',
    name: 'MAN TGX Fog Lamp',
    brand: 'MAN',
